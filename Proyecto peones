    movimientochoose = int(input("que movimiento deseas: "))        #Que ingrese cual de todos los posibles movimientos desea
    movimiento = opciones[movimientochoose - 1]         #Quita la opcion que seleccionamos
    return movimiento       #Retorna el movimiento realizado

def mov_negros(tablero):        #Se inicia la funcion de los movimientos negros realizados por el otro jugador
    peonesnegros = []       #Se inicia una lista para almacenar las posiciones de los peones
    for fila in range(0, 3):        #Se inicia unos bucles para buscar los peones
        for columna in range(0, 3):
            if tablero[fila][columna] == 2:
                peonesnegros.append(fila), peonesnegros.append(columna)     #Al encontrarlos almacena las posiciones de la columna y la fila en la lista
    print(peonesnegros)     #Imprime la lista
    opciones = []       #Una lista donde se van a almacenar con todas las opciones posibles
    tablero_original = tablero      #Se crea un tablero igual al original para las opciones
    if len(peonesnegros)==0:    #Si no hay ningun peon
        return "las fichas blancas han ganado"      #Ganan las blancas
    elif len(peonesnegros) == 6:        #Si hay 3 peones va a evaluar los posibles movimientos
        if tablero_original[peonesnegros[0] + 1][peonesnegros[1]] == 0:         #si no hay nada en esa pocicion
            tablero_nuevo1 = np.array(tablero_original)     #Crea una matriz nueva
            tablero_nuevo1[peonesnegros[0] + 1][peonesnegros[1]] = 2    #cambia la posicion
            tablero_nuevo1[peonesnegros[0]][peonesnegros[1]] = 0        #y la combierte en 0
            print("opcion:")    #imprime la opcion
            print(tablero_nuevo1[0]), print(tablero_nuevo1[1]), print(tablero_nuevo1[2])
            op1 = tablero_nuevo1    #Se almacena la opcion en una variable
            opciones.append(op1)    #Se guarda en la lista la opcion

        if tablero_original[peonesnegros[2] + 1][peonesnegros[3]] == 0: #Se repite el proceso para una opcion distinta en cada bucle
            tablero_nuevo2 = np.array(tablero_original)
            tablero_nuevo2[peonesnegros[2] + 1][peonesnegros[3]] = 2
            tablero_nuevo2[peonesnegros[2]][peonesnegros[3]] = 0
            print("opcion:")
            print(tablero_nuevo2[0]), print(tablero_nuevo2[1]), print(tablero_nuevo2[2])
            op2 = tablero_nuevo2
            opciones.append(op2)

        if tablero_original[peonesnegros[4] + 1][peonesnegros[5]] == 0:
            tablero_nuevo3 = np.array(tablero_original)
            tablero_nuevo3[peonesnegros[4] + 1][peonesnegros[5]] = 2
            tablero_nuevo3[peonesnegros[4]][peonesnegros[5]] = 0
            print("opcion:")
            print(tablero_nuevo3[0]), print(tablero_nuevo3[1]), print(tablero_nuevo3[2])
            op3 = tablero_nuevo3
            opciones.append(op3)

        if peonesnegros[1] == 1:
            if tablero_original[peonesnegros[0] + 1][peonesnegros[1] + 1] == 1:
                tablero_nuevo3 = np.array(tablero_original)
                tablero_nuevo3[peonesnegros[0] + 1][peonesnegros[1] + 1] = 2
                tablero_nuevo3[peonesnegros[0]][peonesnegros[1]] = 0
                print("opcion:")
