import random   #Se importan librerias
import numpy as np
tablero=[[2,2,2],   #Iniciamos una matriz para que sea nuestro tablero
         [0,0,0],
         [1,1,1]]
print(tablero[0]),print(tablero[1]),print(tablero[2])   #Imprimimos el tablero
print(
    """ *****************BIENVENIDO*****************""")        #Les damos al usuario sus reglas y la bienvenida
print(""" reglas de movimientos                 

            los movimientos de los peones corresponden a los movimientos que puede hacer un peon regularmente en un juego de ajedrez:
            -movimiento en diagonal una casilla, unicament epara comer una ficha del oponente
            -movimiento al frente unicamente unna casilla

            """)
print(""" reglas para ganar

            un jugador gana cuando:
            -el jugador ha capturado todas las fichas del oponente
            -una de sus fichas ha llegado al otro extremo del tablero
            nota/ habrá un empate cuando ya no halla mas movimientos posible
            """)
jugadores = int(input("1 o 2 jugadores"))                       #Se le pide al usuario si va a jugar contra la maquina o van a jugar 2 usuarios
def start_game(tablero,jugadores):                              #Inicializamos la funcion para comenzar el juego
    if jugadores==2:                                            #Se evalua si el usuario ingreso para que jueguen 2 personas
        if tablero[0][0]!=1 and tablero[0][1]!=1 and tablero[0][2]!=1 and tablero[2][0]!=2 and tablero[2][1]!=2 and tablero[2][2]!=2:   #Se evalua que el tablero este en su posicion incial
            print("es turno de las blancas")                #Se imprime el turno de la persona que le toca
            tablero = mov_blancas(tablero)                  #Se inicia la funcion de los movimientos posibles para las blancas
            print(tablero[0]), print(tablero[1]), print(tablero[2])         #Imprime el nuevo tablero
            if tablero[0][0] == 1 or tablero[0][1] == 1 or tablero[0][2] == 1:      #Se evalua si las blancas ganaron ya que cruzaron los peones todo el tablero
                print("las fichas blancas han ganado")      #Imprime el mensaje
            print("es turno de las negras")             #Si no, juegan las negras
            tablero = mov_negros(tablero)                  #Inicia la funcion de los movimientos de las negras
            print(tablero[0]), print(tablero[1]), print(tablero[2])         #Se imprime el nuevo tablero
            return start_game(tablero,jugadores)        #Retorna nuevamente la funcion para volver a hacer todo
        elif tablero[0][0]==1 or tablero[0][1]==1 or tablero[0][2]==1:
            print("las fichas blancas han ganado")
        elif tablero[2][0]==2 or tablero[2][1]==2 or tablero[2][2]==2:              #Se evalua si las negras ganaron
            print("las fichas negras han ganado")
    elif jugadores==1:      #En cambio si solo juega 1 jugador contra la maquina empieza otro proceso
        if tablero[0][0] != 1 and tablero[0][1] != 1 and tablero[0][2] != 1 and tablero[2][0] != 2 and tablero[2][1] != 2 and tablero[2][2] != 2:     #Se evalua quien debe seguir
            print("es turno de las negras")
            tablero = mov_negros_IA(tablero)#Se inicia la funcion de las negras por parte de la maquina
            print(tablero[0]), print(tablero[1]), print(tablero[2])
            if tablero[2][0] == 2 or tablero[2][1] == 2 or tablero[2][2] == 2:  #Se evalua si las negras ganaron
                print("las fichas negras han ganado")
            print("es turno de las blancas")        #Si no las blancas juegas
            tablero = mov_blancas(tablero)
            print(tablero[0]), print(tablero[1]), print(tablero[2])
            return start_game(tablero, jugadores)       #Retorna otra vez la funcion para que repita el proceso
        elif tablero[0][0] == 1 or tablero[0][1] == 1 or tablero[0][2] == 1:    #Evalua si las blancas ganaron o las negras
            print("las fichas blancas han ganado")
        elif tablero[2][0] == 2 or tablero[2][1] == 2 or tablero[2][2] == 2:
            print("las fichas negras han ganado")



def mov_blancas(tablero):       #se inicia la funcion de la blancas quiere decir del primer jugador
    peonesblancos = []          #Lista para evaluar las posiciones de los peones
    for fila in range(0, 3):
        for columna in range(0, 3):
            if tablero[fila][columna] == 1:
                peonesblancos.append(fila), peonesblancos.append(columna)       #Se agregan las posiciones de los peones
    print(peonesblancos)
    opciones = []       #Se inicia una lista de las opciones posibles de movimientos de las blancas
    tablero_original = tablero      #Se añade el tablero
    if len(peonesblancos)==0:       #Se evalua si no hay peones blancos para ver si las negras ganaron
        return "las fichas negras han ganado"
    elif len(peonesblancos) == 6:       #Se cuentan si estan todos los peones
        if tablero_original[peonesblancos[0] - 1][peonesblancos[1]] == 0:   #Se evalua la posicion de los peones
            tablero_nuevo1 = np.array(tablero_original)         #crea una lista con similar a el tablero original
            tablero_nuevo1[peonesblancos[0] - 1][peonesblancos[1]] = 1      #cambia el valor en la posicion
            tablero_nuevo1[peonesblancos[0]][peonesblancos[1]] = 0      #Actualiza el termino
            print("opcion:")    #Se imprime la opcion
            print(tablero_nuevo1[0]), print(tablero_nuevo1[1]), print(tablero_nuevo1[2])
            op1 = tablero_nuevo1    #Se genera la opcion
            opciones.append(op1)    #Se agrefa la opcion a la lista op1

        if tablero_original[peonesblancos[2] - 1][peonesblancos[3]] == 0:       #Se repite el proceso con las otras opciones posibles
            tablero_nuevo2 = np.array(tablero_original)
            tablero_nuevo2[peonesblancos[2] - 1][peonesblancos[3]] = 1
            tablero_nuevo2[peonesblancos[2]][peonesblancos[3]] = 0
            print("opcion:")
            print(tablero_nuevo2[0]), print(tablero_nuevo2[1]), print(tablero_nuevo2[2])
            op2 = tablero_nuevo2
            opciones.append(op2)

        if tablero_original[peonesblancos[4] - 1][peonesblancos[5]] == 0:
            tablero_nuevo3 = np.array(tablero_original)
            tablero_nuevo3[peonesblancos[4] - 1][peonesblancos[5]] = 1
            tablero_nuevo3[peonesblancos[4]][peonesblancos[5]] = 0
            print("opcion:")
            print(tablero_nuevo3[0]), print(tablero_nuevo3[1]), print(tablero_nuevo3[2])
            op3 = tablero_nuevo3
