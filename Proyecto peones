def mov_negros_IA(tablero):     #funcion para los movimientos de la maquina
    peonesnegros = []
    for fila in range(0, 3):
        for columna in range(0, 3):
            if tablero[fila][columna] == 2:
                peonesnegros.append(fila), peonesnegros.append(columna)
    print(peonesnegros)
    opciones = []
    tablero_original = tablero
    if len(peonesnegros) == 6:
        if tablero_original[peonesnegros[0] + 1][peonesnegros[1]] == 0:
            tablero_nuevo1 = np.array(tablero_original)
            tablero_nuevo1[peonesnegros[0] + 1][peonesnegros[1]] = 2
            tablero_nuevo1[peonesnegros[0]][peonesnegros[1]] = 0
            print("opcion:")
            print(tablero_nuevo1[0]), print(tablero_nuevo1[1]), print(tablero_nuevo1[2])
            op1 = tablero_nuevo1
            opciones.append(op1)

        if tablero_original[peonesnegros[2] + 1][peonesnegros[3]] == 0:
            tablero_nuevo2 = np.array(tablero_original)
            tablero_nuevo2[peonesnegros[2] + 1][peonesnegros[3]] = 2
            tablero_nuevo2[peonesnegros[2]][peonesnegros[3]] = 0
            print("opcion:")
            print(tablero_nuevo2[0]), print(tablero_nuevo2[1]), print(tablero_nuevo2[2])
            op2 = tablero_nuevo2
            opciones.append(op2)

        if tablero_original[peonesnegros[4] + 1][peonesnegros[5]] == 0:
            tablero_nuevo3 = np.array(tablero_original)
            tablero_nuevo3[peonesnegros[4] + 1][peonesnegros[5]] = 2
            tablero_nuevo3[peonesnegros[4]][peonesnegros[5]] = 0
            print("opcion:")
            print(tablero_nuevo3[0]), print(tablero_nuevo3[1]), print(tablero_nuevo3[2])
            op3 = tablero_nuevo3
            opciones.append(op3)

        if peonesnegros[1] == 1:
            if tablero_original[peonesnegros[0] + 1][peonesnegros[1] + 1] == 1:
                tablero_nuevo3 = np.array(tablero_original)
                tablero_nuevo3[peonesnegros[0] + 1][peonesnegros[1] + 1] = 2
                tablero_nuevo3[peonesnegros[0]][peonesnegros[1]] = 0
                print("opcion:")
                print(tablero_nuevo3[0]), print(tablero_nuevo3[1]), print(tablero_nuevo3[2])
                op3 = tablero_nuevo3
                opciones.append(op3)
            if tablero_original[peonesnegros[0] + 1][peonesnegros[1] - 1] == 1:
                tablero_nuevo3 = np.array(tablero_original)
                tablero_nuevo3[peonesnegros[0] + 1][peonesnegros[1] - 1] = 2
                tablero_nuevo3[peonesnegros[0]][peonesnegros[1]] = 0
                print("opcion:")
                print(tablero_nuevo3[0]), print(tablero_nuevo3[1]), print(tablero_nuevo3[2])
                op3 = tablero_nuevo3
                opciones.append(op3)
        elif peonesnegros[1] == 0:
            if tablero_original[peonesnegros[0] + 1][peonesnegros[1] + 1] == 1:
                tablero_nuevo3 = np.array(tablero_original)
                tablero_nuevo3[peonesnegros[0] + 1][peonesnegros[1] + 1] = 2
                tablero_nuevo3[peonesnegros[0]][peonesnegros[1]] = 0
                print("opcion:")
                print(tablero_nuevo3[0]), print(tablero_nuevo3[1]), print(tablero_nuevo3[2])
                op3 = tablero_nuevo3
                opciones.append(op3)
        elif peonesnegros[1] == 2:
            if tablero_original[peonesnegros[0] + 1][peonesnegros[1] - 1] == 1:
